{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "server/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/server/(.*)",
      "dest": "/server/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ],
  "env": {
    "API_URL": "/api", // Example of an environment variable for the frontend to access the API
    "ANOTHER_ENV_VAR": "value" // Add any other environment variables needed
  },
  "github": {
    "silent": true // Prevents Vercel from commenting on GitHub PRs
  }
}
